<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<p>
  <strong>Image data:</strong>
  <%= image_tag @post.image_url %>
</p>

  <% for comment in @comments %>
  <p>
    <strong>Comment:</strong>
    <%= comment.commentary %>
    <strong>Autor:</strong>
    <%= comment.user.email %>
  </p>
  <% end %>

</br>

<% if user_signed_in? %>
  <% unless Like.find_by(post_id: @post.id, user_id: current_user.id) %>
   <p>
    <%= link_to "Like", likes_path(id: @post.id), method: :post %>
  </p>
  <% else %>
    <%= link_to "UnLike", like_path(id: @post.id), method: :delete %>
  <% end %>
  </br>
    <%= render 'comments_form', comment: @comment %>
<% else %>
  <p> For comments and likes need log in </p>
<%end %>



<%= link_to 'Edit', edit_user_post_path(@user, @post) %> |
<%= link_to 'Back', user_posts_path(@user) %>
