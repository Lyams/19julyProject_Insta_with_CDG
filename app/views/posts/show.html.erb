<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<p>
  <strong>Image data:</strong>
  <%= image_tag @post.image_url %>
</p>

  <% for comment in @comments %>
  <p>
    <strong>Comment:</strong>
    <%= comment.commentary %>
    <strong>Autor:</strong>
    <%= comment.user.email %>
  </p>
  <% end %>

</br>
<p>
<% if user_signed_in? %>
<%= render 'comments_form', comment: @comment %>
<% else %>
  For comments need log in
<%end %>

</p>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
