<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Image data</th>
      <th>Autor</th>
      <th>Likes</th>
      <th>Count of comments</th>
      <th colspan=""></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.description %></td>
        <td><%= image_tag post.image_url %></td>
        <td> <%= post.user.name %></td>
        <td> <%= post.likes.count %> </td>
        <td><%= post.comments.count %></td>
        <td><%= link_to 'Show', user_post_path(post.user, post) %></td>
        <% if user_signed_in? %>
        <% if policy(post).update? %>
          <td><%= link_to 'Edit', edit_user_post_path(post.user, post) %></td>
        <% end %>
        <% if policy(post).destroy? %>
          <td><%= link_to 'Destroy', user_post_path(post.user, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', user_posts_path(current_user) if user_signed_in? %>
<%= link_to 'New Post', new_user_post_path(current_user), class:"btn btn-primary" %>
