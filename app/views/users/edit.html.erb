<%= form_with(model: @user, local: true) do |form| %>

  <div class="sm-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_area :name, minlength: 2, class: 'form-control' %>
  </div>
  <div class="sm-3">
    <%= form.label :bio, class: "form-label" %>
    <%= form.text_area :bio, minlength: 2, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= form.submit class:'btn btn-primary' %>
  </div>
<% end %>
